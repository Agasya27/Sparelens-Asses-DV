DATABASE_URL=sqlite:///./app.db
JWT_SECRET_KEY=change-me
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
UPLOAD_DIR=../uploads

# CORS settings for local development
# When true, allow all origins (do NOT use in production)
DEV_CORS=false
# Optional: comma-separated list of extra origins (e.g., your Vite network URL)
# Example: http://192.168.1.50:5000,http://myhost.local:5000
CORS_EXTRA_ORIGINS=

# Optional: Bootstrap an admin user at startup if none exists
# Set both to enable. Username defaults to 'admin' if not set.
ADMIN_EMAIL=
ADMIN_PASSWORD=
ADMIN_USERNAME=admin
ADMIN_OVERWRITE=false

